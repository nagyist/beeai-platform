{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "agentstack-server",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "agentstack_server.application:app",
                "--host=0.0.0.0",
                "--port=18333",
                "--timeout-keep-alive=60",
                "--timeout-graceful-shutdown=2"
            ],
        },
        {
            "name": "debug-file",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "program": "${file}",
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "presentation": {
                "hidden": true, // keep original launch order in 'run and debug' tab
            }
        }
    ]
}